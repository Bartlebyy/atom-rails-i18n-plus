{
  "name": "rails-i18n-plus",
  "main": "./lib/main",
  "version": "0.3.0",
  "description": "Autocomplete+ and hyperclick provider for Rails I18n",
  "keywords": [
    "rails",
    "i18n",
    "autocomplete"
  ],
  "repository": "https://github.com/aki77/atom-rails-i18n-plus",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "chokidar": "^1.6.1",
    "flat": "^2.0.1",
    "fuzzaldrin-plus": "^0.4.1",
    "js-yaml": "^3.8.3",
    "lodash.sortby": "^4.7.0"
  },
  "devDependencies": {
    "eslint": "3.19.0",
    "eslint-config-airbnb-base": "11.1.3",
    "eslint-plugin-import": "2.2.0"
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocomplete"
      }
    },
    "hyperclick.provider": {
      "versions": {
        "0.0.0": "provideHyperclick"
      }
    }
  },
  "activationHooks": [
    "language-ruby:grammar-used",
    "language-haml:grammar-used",
    "language-ruby-on-rails:grammar-used"
  ],
  "configSchema": {
    "localesPaths": {
      "order": 1,
      "title": "Locales paths",
      "description": "Directories list separated by comma(for example \"config/locales, config/foo\")",
      "type": "array",
      "default": [
        "config/locales"
      ]
    },
    "priorityOfLocales": {
      "order": 2,
      "title": "Priority of locales",
      "description": "Priority locales list separated by comma(for example \"ja, en\")",
      "type": "array",
      "default": [
        "en"
      ]
    },
    "translateMethods": {
      "order": 10,
      "title": "Translate methods",
      "type": "array",
      "default": [
        "I18n.translate",
        "I18n.t",
        "t"
      ]
    },
    "localizeMethods": {
      "order": 11,
      "title": "Localize methods",
      "type": "array",
      "default": [
        "I18n.localize",
        "I18n.l",
        "l"
      ]
    }
  }
}
